node {
    // uncomment these 2 lines and edit the name 'node-4.6.0' according to what you choose in configuration
    // def nodeHome = tool name: 'node-4.6.0', type: 'jenkins.plugins.nodejs.tools.NodeJSInstallation'
    // env.PATH = "${nodeHome}/bin:${env.PATH}"

    stage('check tools') {
        sh "node -v"
        sh "npm -v"
        sh "bower -v"
        sh "gulp -v"
    }

    stage('checkout') {
        checkout scm
    }

    stage('npm install ') {
        dir('microservice-demo/demoapp') {
          sh "npm install"
        }
    }

    stage('clean') {
      parallel(demoapp: {
        dir('microservice-demo/demoapp') {
          sh "./mvnw clean"
        }
      }, repository: {
        dir('microservice-demo/repository') {
          sh "./mvnw clean"
        }
      })
    }

    stage('backend tests demoapp') {
        dir('microservice-demo/demoapp') {
          sh "./mvnw test"
        }
    }

    stage('backend tests repository-microservice') {
        dir('microservice-demo/repository') {
          sh "./mvnw test"
        }
    }


    stage('frontend tests') {
        dir('microservice-demo/demoapp') {
          sh "gulp test"
        }
    }

    stage('packaging') {
      parallel(demoapp: {
        dir('microservice-demo/demoapp') {
          sh "./mvnw package -Pprod -DskipTests"
        }
      }, repository: {
        dir('microservice-demo/repository') {
          sh "./mvnw package -Pprod -DskipTests"
        }
      })
    }

    stage('Install to test') {
        dir('microservice-demo/demoapp') {
          docker.withRegistry('https://docker-repository-default.cloudapps.demo.tecdomain.net', 'openshift') {
            docker.withServer('tcp://127.0.0.1:4243') {
              def newDemoApp = docker.build "microservice/demoapp:${env.BUILD_TAG}"
              newDemoApp.push()
              newDemoApp.push 'latest'
            }
          }
        }
        dir('microservice-demo/repository') {
          docker.withRegistry('https://docker-repository-default.cloudapps.demo.tecdomain.net', 'openshift') {
            docker.withServer('tcp://127.0.0.1:4243') {
              def newRepositoryApp = docker.build "microservice/repository:${env.BUILD_TAG}"
              newRepositoryApp.push()
              newRepositoryApp.push 'latest'
            }
          }
        }
   }
}
